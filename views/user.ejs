<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        table, th, td {
          border: 1px solid black;
          background-color: bisque;
          width: 700px;
          margin: auto;
          text-align: center;
        }

        h1,h3{
            text-align: center
        }
    </style>
</head>
<body>
        <h1>List of Users</h1>
        <table>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>option</th>
            </tr>
            <tr>
                <% userData.forEach(user => { %>
                    <td><%= user.dataValues.id%></td>
                    <td><%= user.dataValues.name%></td>
                    <td><%= user.dataValues.email%></td>
                    <td><%= user.dataValues.password%></td>
                    <td><a href="/user/<%= user.dataValues.id%>/edit">edit</a> || <a href="/user/<%= user.dataValues.id%>/delete">delete</a></td>
            </tr>
            <% })%>
        </table>
</body>
</html>