<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include ../views/partials/style.ejs %>
    <title>Duolingo Clone App</title>
</head>
<body background="https://monodomo.com/free-wallpapers/dark-nature-wallpapers-1080p-For-Free-Wallpaper-1.jpg" >
    <%- include ../views/partials/navbarN.ejs %>    
    <h1 style="color: white">List of Users</h1>
        <table style="width: 30%; margin-top: 3%; margin-left: 20%; background-color: black; opacity: 0.7;">
            <tr>
                <th>id</th>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>option</th>
            </tr>
            <tr>
                <% userData.forEach(user => { %>
                    <td><%= user.dataValues.id%></td>
                    <td><%= user.dataValues.name%></td>
                    <td><%= user.dataValues.email%></td>
                    <td><%= user.dataValues.password%></td>
                    <td><a href="/user/<%= user.dataValues.id%>/edit">edit</a> || <a href="/user/<%= user.dataValues.id%>/delete">delete</a></td>
            </tr>
            <% })%>
        </table>
</body>
</html>